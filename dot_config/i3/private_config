# i3 Resurrect Settings
set $i3res i3-resurrect

# Save workspace mode
mode "save" {
	bindsym 1 exec --no-startup-id "$i3res save -w 1 --swallow=class,instance,title"
	bindsym 2 exec --no-startup-id "$i3res save -w 2 --swallow=class,instance,title"
	bindsym 3 exec --no-startup-id "$i3res save -w 3 --swallow=class,instance,title"
	bindsym 4 exec --no-startup-id "$i3res save -w 4 --swallow=class,instance,title"
	bindsym 5 exec --no-startup-id "$i3res save -w 5 --swallow=class,instance,title"
	bindsym 6 exec --no-startup-id "$i3res save -w 6 --swallow=class,instance,title"
	bindsym 7 exec --no-startup-id "$i3res save -w 7 --swallow=class,instance,title"
	bindsym 8 exec --no-startup-id "$i3res save -w 8 --swallow=class,instance,title"
	bindsym 9 exec --no-startup-id "$i3res save -w 9 --swallow=class,instance,title"
	bindsym 0 exec --no-startup-id "$i3res save -w 0 --swallow=class,instance,title"
	bindsym t exec --no-startup-id "$i3res save -w Terminal --swallow=class,instance,title"

	# Back to normal: Enter, Escape, or s
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym s mode "default"
	bindsym $mod+s mode "Default"
}

bindsym $mod+y mode "save"

# Restore workspace mode
mode "restore" {
	bindsym 1 exec --no-startup-id "$i3res restore -w 1 --layout-only"
	bindsym 2 exec --no-startup-id "$i3res restore -w 2 --layout-only"
	bindsym 3 exec --no-startup-id "$i3res restore -w 3 --layout-only"
	bindsym 4 exec --no-startup-id "$i3res restore -w 4 --layout-only"
	bindsym 5 exec --no-startup-id "$i3res restore -w 5 --layout-only"
	bindsym 6 exec --no-startup-id "$i3res restore -w 6 --layout-only"
	bindsym 7 exec --no-startup-id "$i3res restore -w 7 --layout-only"
	bindsym 8 exec --no-startup-id "$i3res restore -w 8 --layout-only"
	bindsym 9 exec --no-startup-id "$i3res restore -w 9 --layout-only"
	bindsym 0 exec --no-startup-id "$i3res restore -w 0 --layout-only"
	bindsym t exec --no-startup-id "$i3res restore -w Terminal --layout-only"


	# Back to normal: Enter, Escape, or s
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym s mode "default"
	bindsym $mod+s mode "Default"
}

bindsym $mod+Shift+y mode "restore"
